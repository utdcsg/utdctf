<div class="hero-unit">
  <h1>UTD CTF</h1>
</div>

<div class="page-header">
  <h1>Registered Competitions</h1>
</div>

<% if @user.competitions.count == 0 %>
  None
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Competition Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @user.competitions.each do |competition| %>
        <tr>
          <td><%= competition.name %></td>
          <td><%= competition.start.strftime("%d %B, %Y - %H:%M") %></td>
          <td><%= competition.end.strftime("%d %B, %Y - %H:%M") %></td>
          <td><%= link_to 'View Problems', competition, :class => 'btn' %></td>
        </tr>
      <% end %>
    </table>
  </table>
<% end %>

<div class="page-header">
  <h1>Other Active Competitions</h1>
</div>

<% if @active_competitions.length == 0 %>
  None
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Competition Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @active_competitions.each do |competition| %>
        <tr>
          <td><%= competition.name %></td>
          <td><%= competition.start.strftime("%d %B, %Y - %H:%M") %></td>
          <td><%= competition.end.strftime("%d %B, %Y - %H:%M") %></td>
          <td><%= link_to 'Register', [:register, competition, current_user], :method => :put, :class => 'btn' %></td>
        </tr>
      <% end %>
    </table>
  </table>
<% end %>

<div class="page-header">
  <h1>Other Inactive Competitions</h1>
</div>

<% if @inactive_competitions.length == 0 %>
  None
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Competition Name</th>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_competitions.each do |competition| %>
        <tr>
          <td><%= competition.name %></td>
          <td><%= competition.start.strftime("%d %B, %Y - %H:%M") %></td>
          <td><%= competition.end.strftime("%d %B, %Y - %H:%M") %></td>
          <td><%= link_to 'View Problems', competition, :class => 'btn' %></td>
        </tr>
      <% end %>
    </table>
  </table>
<% end %>
