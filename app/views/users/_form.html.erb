<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span4">
      <div class="well">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </div>
    </div>
    <div class="span4">
      <div class="well">
        <div class="field">
          <%= f.label :password, 'Password' %>
          <%= f.password_field :password, :size => 40 %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, 'Confirm' %>
          <%= f.password_field :password_confirmation, :size => 40 %>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span8">
      <div class="well">
        <div class="field">
          <%= f.label :description %> (Optional)<br />
          <%= f.text_area :description, :class => "input-xxlarge" %>
        </div>
    </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="actions">
      <%= f.submit nil, :class => 'btn' %>
    </div>
  </div>
<% end %>
