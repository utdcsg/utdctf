<% content_for :leftmenu do %>
  <%= render :partial => 'leftmenu' %>
<% end %>

<div class="page-header">
  <h1>Problem Statistics</h1>
</div>

<div class="well" style="overflow: auto;">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th></th>
        <% @competition.categories.each do |category| %>
          <th colspan="<%= category.problems.count %>"><%= category.name %></th>
        <% end %>
      </tr>
      <tr>
        <th>User</th>
        <% @competition.categories.each do |category| %>
          <% category.problems.each do |problem| %>
            <th><%= problem.title %> <span class="label"><%= problem.solves.length %></span></th>
          <% end %>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @competition.users.sort_by {|u| u.name.downcase }.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <% @competition.categories.each do |category| %>
            <% category.problems.each do |problem| %>
              <td>
                <% if problem.users.include? user %>
                  <i class="icon-ok icon-white"></i>
                <% else %>
                  <i class="icon-remove icon-white"></i>
                <% end %>
              </td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
