<%= form_for([:admin,@competition]) do |f| %>
  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competition.errors.count, "error") %> prohibited this competition from being saved:</h2>

      <ul>
      <% @competition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span6">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
    </div>
    <div class="span6">
        <div class="field">
          <%= f.label :start %>
          <% if not @competition.start.nil? %>
            <%= f.text_field :start, :id => 'start_datetime_textfield', :value => @competition.start.strftime("%Y-%m-%d %H:%M") %>
          <% else %>
            <%= f.text_field :start, :id => 'start_datetime_textfield' %>
          <% end %>
        </div>
        <div class="field">
          <%= f.label :end %>
          <% if not @competition.start.nil? %>
            <%= f.text_field :end, :id => 'end_datetime_textfield', :value => @competition.end.strftime("%Y-%m-%d %H:%M") %>
          <% else %>
            <%= f.text_field :end, :id => 'end_datetime_textfield' %>
          <% end %>
        </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="actions">
        <%= f.submit nil, :class=>'btn'%>
      </div>
    </div>
  </div>
<% end %>

