<div class="page-header">
  <h1>List of Competitions</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th>Active</th>
      <th>Visibility</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.name %></td>
        <td><%= competition.start.strftime("%d %B, %Y - %H:%M") %></td>
        <td><%= competition.end.strftime("%d %B, %Y - %H:%M") %></td>
        <% if competition.active %>
          <td><span class="label label-success">True</span></td>
        <% else %>
          <td><span class="label">False</span></td>
        <% end %>
        <% if competition.hidden %>
          <td><span class="label">Hidden</span></td>
        <% else %>
          <td><span class="label label-success">Visible</span></td>
        <% end %>
        <td><%= link_to 'Details', [:admin, competition], :class => 'btn' %></td>
        <% if competition.active %>
          <td><%= link_to 'Deactivate', deactivate_admin_competition_path(competition), :method => :put, :class => 'btn' %></td>
        <% else %>
          <td><%= link_to 'Activate', activate_admin_competition_path(competition), :method => :put, :class => 'btn' %></td>
        <% end %>
        <% if competition.hidden %>
          <td><%= link_to 'Unhide', unhide_admin_competition_path(competition), :method => :put, :class => 'btn' %></td>
        <% else %>
          <td><%= link_to 'Hide', hide_admin_competition_path(competition), :method => :put, :class => 'btn' %></td>
        <% end %>
        <td><%= link_to 'Edit', [:edit, :admin, competition], :class => 'btn' %></td>
        <td><%= link_to 'Categories', admin_competition_categories_path(competition), :class => 'btn' %></td>
        <td><%= link_to 'News', admin_competition_news_index_path(competition), :class => 'btn' %></td>
        <td><%= link_to 'Destroy', [:admin, competition], :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Competition', new_admin_competition_path, :class => 'btn btn-primary' %>
