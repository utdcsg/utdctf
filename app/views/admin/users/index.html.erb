<div class="page-header">
  <h1>Registered Users</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role.capitalize || "User" %></td>
        <td><%= user.description %></td>
        <td><%= link_to 'Edit', [:edit, :admin, user], :class=>'btn' %></td>
        <td><%= link_to 'Destroy', [:admin, user], :class => 'btn', :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_admin_user_path, :class => 'btn btn-primary' %>
